<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomMenuStyle">
        <item name="android:background">#E0E0E0</item>
        <item name="android:translationZ">90dp</item>
    </style>

    <style name="BottomMenuItemStyle">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="BottomMenuButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">#00FFFFFF</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DetailTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#404040</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailValueTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textFontWeight">@integer/fontThin</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="DetailDataTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textFontWeight">@integer/fontLight</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MetroTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">#404040</item>
        <item name="tabTextAppearance">@style/MetroTabText</item>
    </style>

    <style name="MetroTabText">
        <item name="android:fontFamily">@font/clearsans</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textFontWeight">@integer/fontLight</item>
    </style>

</resources>